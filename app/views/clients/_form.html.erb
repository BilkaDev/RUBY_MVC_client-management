<%= form_with(model: client) do |form| %>
  <% if client.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(client.errors.count, "error") %> prohibited this client from being saved:</h2>

      <ul>
        <% client.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mt-2">
    <%= form.label :fullname, style: "display: block" %>
    <%= form.text_field :fullname %>
  </div>

  <div class="mt-2">
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email %>
  </div>

  <div class="mt-2">
    <%= form.label :phone_number, style: "display: block" %>
    <%= form.text_field :phone_number %>
  </div>

  <div class="mt-2">
    <%= form.label :status, style: "display: block" %>
    <%= form.select :status, [["Active", "active"], ["Finish", "finish"], ["Pending", "pending"]] %>
  </div>

  <div class="mt-2">
    <%= form.label :notes, style: "display: block" %>
    <%= form.text_area :notes, cols: 40, rows: 5 %>
  </div>

  <div class="mt-2 ">
    <%= form.submit class: 'btn bg-primary button text-white fs-4' %>
  </div>
<% end %>
