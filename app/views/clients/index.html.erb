<div class="clients-content">
  <div class="clients-table">
    <table class="table align-middle mb-0 bg-white">
      <thead class="bg-primary text-white">
      <tr>
        <th>Name</th>
        <th>Status</th>
        <th>Next contact date</th>
        <th>Actions</th>
      </tr>
      </thead>
      <tbody>
      <% @clients.each do |client| %>
        <tr class="text-primary">
          <td>
            <div class="d-flex align-items-center client-name">
              <%= link_to client do %>
              <div class="ms-3">
                <p class="fw-bold mb-1"><%= client.fullname %>
                </p>
                <p class="text-muted mb-0"><%= client.email %></p>
              </div>
                <% end %>
            </div>
          </td>
          <td>
            <p class="fw-normal mb-1 badge text-bg-success">dodać status</p>
          </td>
          <td>
            <span class="">Dodać date</span>
          </td>
          <td>
            <%= link_to edit_client_path(client) do %>
              <button type="button" class="btn button">
                <i class="bi bi-pencil-square fs-2"></i>
              </button>
            <% end %>
            <%= link_to client do %>
              <button type="button" class="btn button">
                <i class="bi bi-eye fs-2"></i>
              </button>
            <% end %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <%= link_to new_client_path do %>
    <button type="button" class="mt-3 btn btn-primary fs-2">Add new client</button>
  <% end %>
</div>
