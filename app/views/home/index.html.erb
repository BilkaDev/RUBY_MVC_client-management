<h1 class="mt-3 text-primary">Home</h1>

<div class="row">
  <div class="col-4">
    <div class="card-shadow home-box p-3">
      <p class="h1 text-primary">Todos</p>
      <p class="h3 text-primary"><i class="bi bi-check2-square"></i> <%= @todos.select { |todo| todo[:status] === 1 }.length %> / <%=@todos.length %></p>
    </div>
  </div>
  <div class="col-4">
    <div class="card-shadow home-box p-3">
      <p class="h1 text-primary">Clients</p>
      <p class="h3 text-primary"><i class="bi bi-activity"></i> Activity: <%= @clients.select { |client| client[:status] === 'active' }.length %></p>
      <p class="h3 text-primary"><i class="bi bi-clock-history"></i> Pending: <%= @clients.select { |client| client[:status] === 'pending' }.length %></p>
      <p class="h3 text-primary"><i class="bi bi-cash-coin"></i> Finished: <%= @clients.select { |client| client[:status] === 'finish' }.length %></p>
    </div>
  </div>
  <div class="col-4">
    <div class="card-shadow home-box p-3">
      <p class="h1 text-primary">Meetings</p>
      <p class="h3 text-primary"><i class="bi bi-calendar-day-fill"></i>Count in this weak: <%= @meetings_count %></p>
    </div>
  </div>

</div>